@model Portal_v1._0._1.Models.Register
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Kullanıcı Ekle";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/Admin/Index">Admin</a>
    </li>
    <li class="breadcrumb-item">
        <a href="/Admin/Index">Kullanıcılar</a>
    </li>
    <li class="breadcrumb-item active">Kullanıcı Ekle</li>
</ol>

<div class="card card-register border-primary mx-auto mt-3 mb-4">
    <div class="card-header"><custom class="custom-strong">Yeni Kullanıcı</custom></div>
    <div class="card-body">
        @if (ViewData["Success"] != null)
        {
            <div class="alert alert-success">
                @ViewData["Success"]
            </div>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="custom-strong">Kullanıcı Adı</label>
                @Html.TextBoxFor(i => i.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.UserName)
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label class="custom-strong" for="password">Şifre</label>
                        @Html.PasswordFor(i => i.Password, new { @class = "form-control", @id = "password" })
                        @Html.ValidationMessageFor(i => i.Password)
                    </div>
                    <div class="col-md-6">
                        <label class="custom-strong" for="inputLastName">Şifre (tekrar)</label>
                        @Html.PasswordFor(i => i.PasswordConfirm, new { @class = "form-control", @id = "passwordConfirm" })
                        @Html.ValidationMessageFor(i => i.PasswordConfirm)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="custom-strong">Ünvan</label>
                @Html.TextBoxFor(i => i.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Title)
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label class="custom-strong" for="inputName">Ad</label>
                        @Html.TextBoxFor(i => i.Name, new { @class = "form-control", @id = "inputName" })
                        @Html.ValidationMessageFor(i => i.Name)
                    </div>
                    <div class="col-md-6">
                        <label class="custom-strong" for="inputLastName">Soyad</label>
                        @Html.TextBoxFor(i => i.LastName, new { @class = "form-control", @id = "inputLastName" })
                        @Html.ValidationMessageFor(i => i.LastName)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="custom-strong">E-Posta</label>
                @Html.TextBoxFor(i => i.Mail, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Mail)
            </div>
            <div class="form-group">
                <label class="custom-strong">Telefon</label>
                @Html.TextBoxFor(i => i.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.PhoneNumber)
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label class="custom-strong">İşe Giriş Tarihi</label>
                        @Html.TextBoxFor(i => i.iseGiris,
                                                          new { @type = "date", @class = "form-control" })
                        @Html.ValidationMessageFor(i => i.iseGiris)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="custom-strong">Lokasyon</label>
                @Html.TextAreaFor(i => i.Address, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-custom-blue float-right">Kaydet</button>
        }
    </div>
</div>

