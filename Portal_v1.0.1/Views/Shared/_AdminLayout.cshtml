﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta http-equiv="content-type" content="text/plain; charset=UTF-8" />
    <title>Admin - @ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico" />
    <!-- Bootstrap core CSS-->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">
    <link href="~/css/fileinput.css" rel="stylesheet" />
</head>
<body class="fixed-nav sticky-footer" id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue fixed-top" id="mainNav">
        <div style="width:72px;" class="navbar-brand">
            <a href="http://egybilisim.com/">
                <img class="myLogo" src="~/images/logo.png" id="main-logo" />
            </a>
            <a href="http://kalderasoft.com/" class="kaldera-link">
            </a>
        </div>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" style="margin-top:73px;" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Profil">
                    <a class="nav-link" href="/Home/Index">
                        <i class="fa fa-fw fa-user"></i>
                        <span class="nav-link-text">Profil</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Parola Değiştir">
                    <a class="nav-link" href="/Account/PasswordChange">
                        <i class="fa fa-fw fa-key"></i>
                        <span class="nav-link-text">Parola Değiştir</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Rol İşlemleri">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseRole" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-sitemap"></i>
                        <span class="nav-link-text">Rol İşlemleri</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseRole">
                        <li>
                            <a href="/RoleAdmin/Create">Rol Ekle</a>
                        </li>
                        <li>
                            <a href="/RoleAdmin/Index">Rol Görüntüle/Sil</a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Kullanıcı İşlemleri">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseUser" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-sitemap"></i>
                        <span class="nav-link-text">Kullanıcı İşlemleri</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseUser">
                        <li>
                            <a href="/Account/Register">Kullanıcı Ekle</a>
                        </li>
                        <li>
                            <a href="/Admin/Index">Kullanıcı Görüntüle/Sil</a>
                        </li>

                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="İzin İşlemleri">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseIzin" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-link"></i>
                        <span class="nav-link-text">İzin İşlemleri</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseIzin">
                        <li>
                            <a href="/Home/IzinIste">İzin İste</a>
                        </li>
                        <li>
                            <a href="/Admin/KullaniciIzinEkle">Kullanıcıya İzin Ekle</a>
                        </li>
                        <li>
                            <a href="/Admin/Izinler">İzinleri Görüntüle</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Rapor İşlemleri">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseRapor" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-link"></i>
                        <span class="nav-link-text">Rapor İşlemleri</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseRapor">
                        <li>
                            <a href="/Home/RaporGir">Rapor Gir</a>
                        </li>
                        <li>
                            <a href="/Admin/Raporlar">Raporları Görüntüle</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Masraf İşlemleri">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseMasraf" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-link"></i>
                        <span class="nav-link-text">Masraf İşlemleri</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseMasraf">
                        <li>
                            <a href="/Home/MasrafGir">Masraf Gir</a>
                        </li>
                        <li>
                            <a href="/Admin/Masraflar">Masrafları Görüntüle</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="CV İşlemleri">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseCV" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-link"></i>
                        <span class="nav-link-text">CV İşlemleri</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseCV">
                        <li>
                            <a class="nav-link" href="/Home/CVEkle">
                                <span class="nav-link-text">CV Ekle</span>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="/Admin/CVGoruntule">
                                <span class="nav-link-text">CV Goruntule</span>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Bilgilendirme İşlemleri">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseBilgilendirme" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-link"></i>
                        <span class="nav-link-text">Bilgilendirme İşlemleri</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseBilgilendirme">
                        <li>
                            <a class="nav-link" href="/Home/BilgilendirmeEkle">
                                <span class="nav-link-text">Bilgilendirme Ekle</span>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="/Admin/Bilgilendirmeler">
                                <span class="nav-link-text">Bilgilendirme Goruntule</span>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                    <a class="nav-link text-center" id="sidenavToggler">
                        <i class="fa fa-fw fa-angle-left"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link">
                        <i class="fa fa-fw fa-user"></i>@User.Identity.Name
                    </a>
                </li>
                <li class="nav-item">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                            <i class="fa fa-fw fa-sign-out"></i>Çıkış Yap
                        </a>
                    }
                </li>
            </ul>
        </div>
    </nav>
    <div class="content-wrapper">

        <div class="container-fluid" style="margin-top:15px;">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
            @RenderBody()
        </div>
        <!-- /.container-fluid-->
        <!-- /.content-wrapper-->
        <footer class="sticky-footer">
            <div class="container">
                <div class="text-center">
                    <small>Copyright © Kalderasoft Portal @DateTime.Now.Year</small>
                </div>
            </div>
        </footer>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fa fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">@User.Identity.Name, çıkış yapmak istiyor musunuz ? </h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Oturum sürenizi sonlandırmak için çıkış yap butonuna tıklayınız.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Geri</button>
                        <a class="btn btn-custom-blue" href="/Account/Logout">Çıkış Yap</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="~/vendor/jquery/jquery.min.js"></script>
        <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- Core plugin JavaScript-->
        <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
        <!-- Page level plugin JavaScript-->
        <script src="~/vendor/datatables/jquery.dataTables.js"></script>
        <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
        <!-- Custom scripts for all pages-->
        <script src="~/js/sb-admin.min.js"></script>
        <!-- Custom scripts for this page-->

        @RenderSection("scripts", false)


    </div>
</body>
</html>
