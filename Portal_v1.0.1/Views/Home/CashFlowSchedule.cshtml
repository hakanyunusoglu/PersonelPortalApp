@model IEnumerable<Portal_v1._0._1.ViewModels.CashFlowGeneralVM>
@{
    ViewBag.Title = "CashFlowSchedule";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="Index">Ana Sayfa</a>
    </li>
    <li class="breadcrumb-item active">Nakit Akışları</li>
</ol>

<div id="calender"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span id="eventTitle">Nakit Akış Detayları</span></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="CashFlowUpdateModalBody">

            </div>
        </div>
    </div>
</div>
<div id="newCFModal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span id="eventTitle">Yeni Nakit Akışı</span></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="newCFModalBody">

            </div>
        </div>
    </div>
</div>

<link href="~/Scripts/fullcalendar.min.css" rel="stylesheet" />
<link href="~/Scripts/fullcalendar.print.css" rel="stylesheet" media="print" />

@section Scripts{

    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/fullcalendar.js"></script>
    <script src="~/Scripts/locale-tr.js" defer></script>


    <script src="~/JS_CRUD/CashFlowCRUD.js"></script>
}

<div class="card border-primary  mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> <strong class="custom-strong">Nakit Akışı Listesi</strong>
    </div>
    <div class="card-body ">
        <div class="form-row">
            <div class="table-responsive">
                <table class="table" id="detailcashflow" cellspacing="0">
                    <thead>
                        <tr>
                            <th scope="col" class="custom-strong">Tarih</th>
                            <th scope="col" class="custom-strong">Öğe</th>
                            <th scope="col" class="custom-strong">Kategori</th>
                            <th scope="col" class="custom-strong">Miktar</th>
                            <th scope="col" class="custom-strong">Birim Fiyatı</th>
                            <th scope="col" class="custom-strong">Toplam</th>
                            <th scope="col" class="custom-strong">Açıklama</th>
                            <th scope="col" class="custom-strong">Aktif/Silinmiş</th>
                            <th scope="col" class="custom-strong"></th>
                        </tr>
                    </thead>
                    <tbody id="cashflowdetailbody">
                    </tbody>
                    <tfoot>
                        <tr>
                            <th scope="col" class="custom-strong"></th>
                            <th scope="col" class="custom-strong"></th>
                            <th scope="col" class="custom-strong"></th>
                            <th scope="col" class="custom-strong"></th>
                            <th scope="col" class="custom-strong"></th>
                            <th scope="col" class="custom-strong"></th>
                            <th scope="col" class="custom-strong"></th>
                            <th scope="col" class="custom-strong"></th>
                            <th scope="col" class="custom-strong">Toplam Tutar: <span id="toplam"></span></th>
                            <th scope="col"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer small text-muted">@DateTime.Now.Year</div>
</div>
