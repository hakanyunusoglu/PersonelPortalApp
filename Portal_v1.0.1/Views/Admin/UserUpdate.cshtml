@model Portal_v1._0._1.Identity.PortalUser
@{
    ViewBag.Title = "UserUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/Admin/Index">Admin</a>
    </li>
    <li class="breadcrumb-item">
        <a href="/Admin/Index">Kullanıcılar</a>
    </li>
    <li class="breadcrumb-item active">Kullanıcı Güncelle</li>
</ol>
<!-- Example DataTables Card-->
<div class="card mb-3 border-primary">
    <div class="card-header">
        <i class="fa fa-table"></i> <strong class="custom-strong">Kullanıcı Bilgileri</strong> 
    </div>
    <div class="card-body">
        <form action="/Admin/UserUpdate" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-4">
                    <div class="kv-avatar">
                        <div class="file-loading">
                            <input id="avatar-1" name="file" type="file" value="default_avatar_male.jpg">
                        </div>
                    </div>
                    <div class="kv-avatar-hint"><small>Select file < 1500 KB</small></div>
                </div>
            </div>
            <div class="form-group">
                @Html.HiddenFor(i => i.Id, new { @class = "form-control" })
                <label for="userName" class="custom-strong">Kullanıcı Adı</label>
                @Html.TextBoxFor(i => i.UserName, new { @class = "form-control", id = "userName" })
                @Html.ValidationMessageFor(i => i.UserName)
            </div>

            <div class="form-group">
                <label for="Name" class="custom-strong">Adı</label>
                @Html.TextBoxFor(i => i.Name, new { @class = "form-control", id = "Name" })
                @Html.ValidationMessageFor(i => i.Name)
            </div>
            <div class="form-group">
                <label for="lastName" class="custom-strong">Soyadı</label>
                @Html.TextBoxFor(i => i.LastName, new { @class = "form-control", id = "lastName" })
                @Html.ValidationMessageFor(i => i.LastName)
            </div>
            <div class="form-group">
                <label for="title" class="custom-strong">Unvan</label>
                @Html.TextBoxFor(i => i.Title, new { @class = "form-control", id = "title" })
                @Html.ValidationMessageFor(i => i.Title)
            </div>
            <div class="form-group">
                <label for="phone" class="custom-strong">Telefon</label>
                @Html.TextBoxFor(i => i.PhoneNumber, new { @class = "form-control", id = "phone" })
                @Html.ValidationMessageFor(i => i.PhoneNumber)
            </div>
            <div class="form-group">
                <label for="mail" class="custom-strong">E-Posta</label>
                @Html.TextBoxFor(i => i.Email, new { @class = "form-control", id = "mail" })
                @Html.ValidationMessageFor(i => i.Email)
            </div>
            <div class="form-group">
                <label for="address" class="custom-strong">Lokasyon</label>
                @Html.TextAreaFor(i => i.Address, new { @class = "form-control", id = "address" })
                @Html.ValidationMessageFor(i => i.Address)
            </div>
            <div class="form-group">
                <label for="address" class="custom-strong">İşten Çıkış Tarihi</label>
                @Html.TextBoxFor(i => i.IsCikis,
                                                new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(i => i.IsCikis)
            </div>
            <div class="form-group">
                <label for="address" class="custom-strong">Çıkış yaptı mı ?</label>
                @Html.CheckBoxFor(i => i.CiktiMi, new { @class = "form-checkbox", id = "address" })
                @Html.ValidationMessageFor(i => i.CiktiMi)
            </div>
            <div class="float-right">
                <input type="submit" class="btn btn-custom-blue" value="Kaydet" />
                @Html.ActionLink("Vazgeç", "Index", null, new { @class = "btn btn-danger" })
            </div>
        </form>
    </div>
    <div class="card-footer small text-muted">@DateTime.Now.Year</div>
</div>
@section scripts{
    <script src="~/js/fileinput.js"></script>
    <script>
        var btnCust = '<button type="button" class="btn btn-secondary" title="Add picture tags" ' +
            'onclick="alert(\'Call your custom code here.\')">' +
            '<i class="fa fa-tag"></i>' +
            '</button>';
        $("#avatar-1").fileinput({
            overwriteInitial: true,
            maxFileSize: 1500,
            showClose: false,
            showCaption: false,
            browseLabel: '',
            removeLabel: '',
            browseIcon: '<i class="fa fa-folder-open"></i>',
            removeIcon: '<i class="fa fa-eraser"></i>',
            removeTitle: 'Cancel or reset changes',
            elErrorContainer: '#kv-avatar-errors-1',
            msgErrorClass: 'alert alert-block alert-danger',
            defaultPreviewContent: '<img src="/uploads/UserPicture/default_avatar_male.jpg" alt="Your Avatar">',
            layoutTemplates: { main2: '{preview} ' + btnCust + ' {remove} {browse}' },
            allowedFileExtensions: ["jpg", "png", "gif"]
        });


    </script>



}
