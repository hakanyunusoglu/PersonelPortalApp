@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Roller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/Admin/Index">Admin</a>
    </li>
    <li class="breadcrumb-item active">Roller</li>
</ol>

<div class="card border-primary ">
    <div class="card-header bg-custom-blue text-white">
        <h3>Roller</h3>
    </div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Tür</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">Rol yok</td>
            </tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete","RoleAdmin",new { id = role.Id }))
                        {
                             @Html.ActionLink("Güncelle", "Edit", new { id = role.Id }, new { @class="btn btn-custom-blue btn-sm"})
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        }
                       
                    </td>
                </tr>
            }
        }
    </table>
</div>

